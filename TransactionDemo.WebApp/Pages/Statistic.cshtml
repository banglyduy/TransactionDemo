@page
@model PrivacyModel
@{
    ViewData["Title"] = "Statistic";
}
<h1>@ViewData["Title"]</h1>


<div class="container">
    <div class="py-5 text-center">
        <h2>Welcome to the Demo</h2>
        <p class="lead">Below is an example form built entirely with Bootstrap's form controls. Each required form group
            has a validation state that can be triggered by attempting to submit the form without completing it.</p>
    </div>

    <div class="row">
        <div class="col-md-12 order-md-12">
            <h4 class="mb-3">Top 5 Balance</h4>
            <div class="row mb-3">
                <div class="col-md-12 mb-2">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Balance</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">© 2017-2018 Company Name</p>
        <ul class="list-inline">
            <li class="list-inline-item"><a href="#">Privacy</a></li>
            <li class="list-inline-item"><a href="#">Terms</a></li>
        </ul>
    </footer>
</div>


@section Scripts
{
<script type="text/javascript">
    const delay = (milliseconds) =>
    {
        return new Promise(resolve => setTimeout(resolve, milliseconds));
    }

    $(document).ready(function ()
    {
        var connection = new signalR.HubConnectionBuilder().withUrl("/hub").build();

        //Receiving
        function renderStatistic(message)
        {
            console.log(message);
            $("#tableBody").empty();
            message.map(account =>
            {
                $("#tableBody").append(
                    `<tr>
                        <td>${account.id}</td>
                        <td>${account.balance}</td>
                    </tr>`
                );
            })
        }

        connection.on("ReceiveNewStatistic", renderStatistic)



        async function start()
        {
            try
            {
                await connection.start();
                console.log("SignalR Connected.");
            } catch (err)
            {
                console.log(err);
                setTimeout(start, 5000);
            }
        };

        connection.onclose(async () =>
        {
            await start();
        });

        start();

    });
</script>
}
